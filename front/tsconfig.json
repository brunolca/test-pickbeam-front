{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "files": [
    "declarations.d.ts", "component-types-sb.d.ts"
  ],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/image-decoration/resolve-image-decoration.tss"],
  "exclude": ["node_modules"]
}
